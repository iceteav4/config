// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": [],
    "default_profile": "ask",
    "dock": "left"
  },
  "ui_font_size": 23,
  "buffer_font_size": 23,
  "buffer_font_family": "Inconsolata",
  "agent_ui_font_size": 23,
  "agent_buffer_font_size": 23,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Zedokai"
  },
  "project_panel": {
    "dock": "right"
  },
  "debugger": {
    "dock": "right"
  },
  "git_panel": {
    "sort_by_path": true,
    "dock": "right"
  },
  "helix_mode": true,
  "vim_mode": true,
  "vim": {
    "default_mode": "normal",
    "cursor_shape": {
      "normal": "hollow",
      "insert": "bar",
      "replace": "block",
      "visual": "underline"
    }
  },
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.removeUnusedImports": true
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "font_family": "Inconsolata",
    "font_size": 23
  },
  "lsp": {
    "basedpyright": {
      "binary": {
        "path": "/home/iceteav4/.local/bin/basedpyright-langserver",
        "arguments": ["--stdio"]
      }
    },
    "ty": {
      "binary": {
        "path": "/home/iceteav4/.local/bin/ty",
        "arguments": ["server"]
      },
      "settings": {
        "disableLanguageServices": true,
        "diagnosticMode": "openFilesOnly"
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "basedpyright", "..."],
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check - --fix -n | ruff format --line-length 120 -"
          ]
        }
      },
      "preferred_line_length": 120
    }
  }
}
