// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "model_parameters": [],
    "default_profile": "ask",
    "dock": "left"
  },
  "ui_font_size": 23,
  "buffer_font_size": 23,
  "buffer_font_family": "Inconsolata",
  "agent_font_size": 25,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Zedokai"
  },
  "project_panel": {
    "dock": "right"
  },
  "helix_mode": true,
  "vim_mode": true,
  "vim": {
    "default_mode": "helix_normal",
    "cursor_shape": {
      "normal": "hollow",
      "insert": "bar",
      "replace": "block",
      "visual": "underline"
    }
  },
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.removeUnusedImports": true
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "font_family": "Inconsolata",
    "font_size": 23
  },
  "lsp": {
    "pyright": {
      "binary": {
        "path": "pyright-langserver",
        "arguments": ["--stdio"]
      }
    },
    "ruff-lsp": {
      "binary": {
        "path": "ruff-lsp"
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff-lsp"],
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": ["-c", "ruff check - --fix -n | ruff format -"]
        }
      }
    }
  }
}
